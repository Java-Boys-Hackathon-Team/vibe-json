<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="vibe-json">
        <createTable tableName="CHAT_MESSAGE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_CHAT_MESSAGE"/>
            </column>
            <column name="CONVERSATION_ID" type="UUID"/>
            <column name="JSON_DSL_SCHEMA_ID" type="UUID"/>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="${offsetDateTime.type}"/>
            <column name="SENDER_TYPE" type="VARCHAR(255)"/>
            <column name="CONTENT" type="CLOB"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="vibe-json">
        <createTable tableName="CONVERSATION">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_CONVERSATION"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="${offsetDateTime.type}"/>
            <column name="TITLE" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="vibe-json">
        <createTable tableName="JSON_DSL_SCHEMA">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_JSON_DSL_SCHEMA"/>
            </column>
            <column name="SCHEMA_TEXT" type="CLOB"/>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="${offsetDateTime.type}"/>
        </createTable>
    </changeSet>
    <changeSet id="4" author="vibe-json">
        <createIndex indexName="IDX_CHAT_MESSAGE_CONVERSATION" tableName="CHAT_MESSAGE">
            <column name="CONVERSATION_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="CONVERSATION_ID" baseTableName="CHAT_MESSAGE"
                                 constraintName="FK_CHAT_MESSAGE_ON_CONVERSATION" referencedColumnNames="ID"
                                 referencedTableName="CONVERSATION"/>
    </changeSet>
    <changeSet id="5" author="vibe-json">
        <createIndex indexName="IDX_CHAT_MESSAGE_JSON_DSL_SCHEMA" tableName="CHAT_MESSAGE">
            <column name="JSON_DSL_SCHEMA_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="JSON_DSL_SCHEMA_ID" baseTableName="CHAT_MESSAGE"
                                 constraintName="FK_CHAT_MESSAGE_ON_JSON_DSL_SCHEMA" referencedColumnNames="ID"
                                 referencedTableName="JSON_DSL_SCHEMA"/>
    </changeSet>
</databaseChangeLog>